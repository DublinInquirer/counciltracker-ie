%header.view-header
  .wrapper{role: 'layout'}
    .breadcrumbs
      .breadcrumb= link_to 'Meetings', [:admin, :meetings]
      .breadcrumb= link_to @amendment.meeting.occurred_on_formatted, [:admin, @amendment.meeting]
      .breadcrumb= link_to 'Motion', [:admin, @amendment.motion], title: @amendment.motion.title
      .breadcrumb= link_to 'New amendment', [:new, :admin, @amendment.meeting, :motion]

.view-content
  .wrapper{role: 'layout'}
    = render partial: 'admin/amendments/form', locals: { amendment: @amendment, motion: @amendment.motion }
