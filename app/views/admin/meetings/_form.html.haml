= form_with model: meeting, url: meeting.persisted? ? [:admin, meeting] : [:admin, :meetings], class: 'admin-form' do |f|
  = render partial: 'admin/shared/errors', locals: {errors: f.object.errors}
  .admin-form_field
    = f.label :occurred_on
    .input
      = f.text_field :occurred_on
  .admin-form_field
    = f.label :meeting_type
    .input
      = f.select :meeting_type, %w(monthly annual special budget finance)

  .admin-form_actions
    = f.submit 'Save', class: 'button'